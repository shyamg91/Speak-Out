
<h1>All Thoughts</h1>
<%= link_to 'New Post', new_post_path %>

<%= link_to 'Back', controller: 'welcome', action: 'index' %>
<table>
  <tr>
    <th>Message</th>
    <th>Acknowledgements</th>
  </tr>
 
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.message %></td>
      <td>Acknowledgements <%= post.votes %></td>
      <td><%= link_to 'Show', post_path(post) %></td>
      <td><%= link_to "Upvote", upvote_post_path(:id => post.id), method: :put %></td>
    </tr>
  <% end %>
</table>